@model CalzadoERP.Model.Sku

@{
    ViewData["Title"] = "Create";
}


<h3>Sku</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreSku" class="control-label"></label>
                <input asp-for="NombreSku" class="form-control" />
                <span asp-validation-for="NombreSku" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorSku" class="control-label"></label>
                <input asp-for="ColorSku" class="form-control" />
                <span asp-validation-for="ColorSku" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProveedor" class="control-label"></label>
                <select asp-for="IdProveedor" class ="form-control" asp-items="ViewBag.IdProveedor"></select>
            </div>
            <div class="form-group">
                <label asp-for="PrecioUnitarioSku" class="control-label"></label>
                <input asp-for="PrecioUnitarioSku" class="form-control" />
                <span asp-validation-for="PrecioUnitarioSku" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnidadSku" class="control-label"></label>
                <input asp-for="UnidadSku" class="form-control" />
                <span asp-validation-for="UnidadSku" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComentariosSku" class="control-label"></label>
                <input asp-for="ComentariosSku" class="form-control" />
                <span asp-validation-for="ComentariosSku" class="text-danger"></span>
            </div>
            <div class="form-group py-3">
                <input type="submit" value="Crear Sku" class="btn btn-primary" />
                <a class="px-3" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
