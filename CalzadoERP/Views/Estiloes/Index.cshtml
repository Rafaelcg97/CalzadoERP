    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEstilo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColorEstilo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeneroEstilo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioEstilo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComentariosEstilo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEstilo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEstilo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEstilo">Delete</a>
