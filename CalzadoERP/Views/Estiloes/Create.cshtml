@model CalzadoERP.Model.Estilo

@{
    ViewData["Title"] = "Create";
}

<h3>ESTILO</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreEstilo" class="control-label"></label>
                <input asp-for="NombreEstilo" class="form-control" />
                <span asp-validation-for="NombreEstilo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorEstilo" class="control-label"></label>
                <input asp-for="ColorEstilo" class="form-control" />
                <span asp-validation-for="ColorEstilo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GeneroEstilo" class="control-label"></label>
                <input asp-for="GeneroEstilo" class="form-control" />
                <span asp-validation-for="GeneroEstilo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioEstilo" class="control-label"></label>
                <input asp-for="PrecioEstilo" class="form-control" />
                <span asp-validation-for="PrecioEstilo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComentariosEstilo" class="control-label"></label>
                <input asp-for="ComentariosEstilo" class="form-control" />
                <span asp-validation-for="ComentariosEstilo" class="text-danger"></span>
            </div>
            <div class="form-group py-3">
                <input type="submit" value="Crear Estilo" class="btn btn-primary" />
                <a class="px-3" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
